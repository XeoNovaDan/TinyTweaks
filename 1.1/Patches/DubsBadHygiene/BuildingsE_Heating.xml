<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Dubs Bad Hygiene</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="TinyTweaks.PatchOperationCheckModSetting">
                    <settingsType>TinyTweaks.TinyTweaksSettings</settingsType>
                    <settingName>cheaperLogBoilers</settingName>
                </li>

                <!-- Reduce Log Boiler's steel cost from 200 to 100 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LogBoiler"]/costList/Steel</xpath>
                    <value>
                        <Steel>100</Steel>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>