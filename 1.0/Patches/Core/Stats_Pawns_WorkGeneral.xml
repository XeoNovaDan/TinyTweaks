<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

            <li Class="TinyTweaks.PatchOperationCheckModSetting">
                <settingsType>TinyTweaks.TinyTweaksSettings</settingsType>
                <settingName>tweakVanilla</settingName>
            </li>

            <!-- Normalise Smoothing speed and Construction speed to 100% at level 8 -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/StatDef[defName="SmoothingSpeed" or defName="ConstructionSpeed"]/skillNeedFactors/li[@Class="SkillNeed_BaseBonus"]</xpath>
                <value>
                    <li Class="SkillNeed_BaseBonus">
                        <skill>Construction</skill>
                        <baseValue>0.08</baseValue>
                        <bonusPerLevel>0.115</bonusPerLevel>
                    </li>
                </value>
            </li>

        </operations>
    </Operation>

</Patch>