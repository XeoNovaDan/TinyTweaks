<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Dubs Bad Hygiene</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="TinyTweaks.PatchOperationCheckModSetting">
                    <settingsType>TinyTweaks.TinyTweaksSettings</settingsType>
                    <settingName>nerfFixtureBeauty</settingName>
                </li>

                <!-- Reduce beauty bonus of hot tubs from 25 to 4 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DubsHotTubBase"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>4</Beauty>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>